//		    	System.out.println(result);
//		    	continue;
//		    }
		    if(i!=0 && c=='-' && result.charAt(i-1)=='(') {
		    	result = result.substring(0,i) + "0" +result.substring(i,result.length());
		    }
		    i++;
		}
		System.out.println(result);
	}

